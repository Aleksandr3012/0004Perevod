mixin top-nav() 
	// start top-nav
	+b.top-nav.block-with-lazy.d-none.d-md-block
		.container
			.row
				.col-aside.col-3
				.col-main.col
					.row
						.col
							+mnu2()
						+lang()(class="col-auto d-none d-lg-block")
						+tel-block()(class="col-auto d-lg-none")
	// end top-nav